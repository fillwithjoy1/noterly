{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build AppBundle",
            "type": "shell",
            "command": [
                "((Get-Content -path ./lib/build_info.dart -Raw) -replace 'UNSET_VERSION','${input:versionName}') | Set-Content -Path ./lib/build_info.dart",
                "&&",
                "flutter",
                "build",
                "appbundle",
                "--build-name=${input:versionName}",
                "--build-number=${input:versionCode}",
                "&&",
                "((Get-Content -path ./lib/build_info.dart -Raw) -replace '${input:versionName}','UNSET_VERSION') | Set-Content -Path ./lib/build_info.dart",
            ]
        }
    ],
    "inputs": [
        {
            "id": "versionName",
            "type": "promptString",
            "description": "Set the version name, i.e. '1.0.0'",
        },
        {
            "id": "versionCode",
            "type": "promptString",
            "description": "Set the version code, i.e. '1'",
        }
    ]
}